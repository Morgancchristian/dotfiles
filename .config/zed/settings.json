{
  // Behavior
  "features": {
    "edit_prediction_provider": "zed"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  
  "restore_on_startup": "none",
  "hide_mouse": "on_typing_and_movement",
  "vim_mode": false,

  
  // UI
  "terminal": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Kanso Zen (Blurred)"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false
  },
  
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "inactive_opacity": 0.5,
  "bottom_dock_layout": "contained"
}
